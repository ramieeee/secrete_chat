{
  "name": "secrete-chat",
  "displayName": "Secrete Chat",
  "description": "Real-time chat integrated into Cursor sidebar",
  "version": "1.0.0",
  "publisher": "secrete-chat",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:secreteChat.chatView",
    "onCommand:secreteChat.openChat",
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "secrete-chat",
          "title": "Chat",
          "icon": "resources/chat.svg"
        }
      ]
    },
    "views": {
      "secrete-chat": [
        {
          "type": "webview",
          "id": "secreteChat.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "secreteChat.openChat",
        "title": "Open Secrete Chat"
      }
    ],
    "configuration": {
      "title": "Secrete Chat",
      "properties": {
        "secreteChat.serverUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Chat server URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
